<Window x:Class="ClarissaJoyFlores.ArtGallery.Windows.Users.UserAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClarissaJoyFlores.ArtGallery.Windows.Users"
        mc:Ignorable="d"
        Title="UserAdd" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="67*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="725*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Add new User" HorizontalAlignment="Left" Height="32" Margin="46,10,0,0" VerticalAlignment="Top" Width="162" Grid.ColumnSpan="3"/>
        <Label Content="First Name" HorizontalAlignment="Left" Height="27" Margin="46,73,0,0" VerticalAlignment="Top" Width="108" Grid.ColumnSpan="3"/>
        <Label Content="Last Name" HorizontalAlignment="Left" Height="29" Margin="46,115,0,0" VerticalAlignment="Top" Width="136" Grid.ColumnSpan="3"/>
        <Label Content="Address" HorizontalAlignment="Left" Height="29" Margin="46,159,0,0" VerticalAlignment="Top" Width="153" Grid.ColumnSpan="3"/>
        <Label Content= "Sex" HorizontalAlignment="Left" Height="29" Margin="46,204,0,0" VerticalAlignment="Top" Width="153" Grid.ColumnSpan="3"/>
        <TextBox x:Name="txtFirstName" HorizontalAlignment="Left" Height="24" Margin="141,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" Grid.Column="2"/>
        <TextBox x:Name="txtLastName" HorizontalAlignment="Left" Height="24" Margin="141,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" Grid.Column="2"/>
        <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Height="24" Margin="141,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" Grid.Column="2"/>
        <TextBox x:Name="txtSex" HorizontalAlignment="Left" Height="24" Margin="141,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" Grid.Column="2"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Height="40" Margin="89,349,0,0" VerticalAlignment="Top" Width="138" Click="btnCancel_Click" Grid.Column="2"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Height="40" Margin="371,349,0,0" VerticalAlignment="Top" Width="138" Click="btnAdd_Click" Grid.Column="2"/>
        <Label Content= "Email" HorizontalAlignment="Left" Height="29" Margin="46,244,0,0" VerticalAlignment="Top" Width="153" Grid.ColumnSpan="3"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="24" Margin="141,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" Grid.Column="2"/>
    </Grid>
</Window>
