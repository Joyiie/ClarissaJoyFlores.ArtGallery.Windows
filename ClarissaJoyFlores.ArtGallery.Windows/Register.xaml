<Window x:Class="ClarissaJoyFlores.ArtGallery.Windows.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClarissaJoyFlores.ArtGallery.Windows"
        mc:Ignorable="d"
        Title="Register" Height="450" Width="800">
    <Grid>
        <Label Content="Sign-Up " HorizontalAlignment="Left" Height="32" Margin="46,10,0,0" VerticalAlignment="Top" Width="162"/>
        <Label Content="First Name" HorizontalAlignment="Left" Height="27" Margin="46,73,0,0" VerticalAlignment="Top" Width="108"/>
        <Label Content="Last Name" HorizontalAlignment="Left" Height="29" Margin="46,115,0,0" VerticalAlignment="Top" Width="136"/>
        <Label Content="Address" HorizontalAlignment="Left" Height="29" Margin="46,159,0,0" VerticalAlignment="Top" Width="153"/>
        <Label Content= "Sex" HorizontalAlignment="Left" Height="29" Margin="46,204,0,0" VerticalAlignment="Top" Width="153"/>
        <TextBox x:Name="txtFirstName" HorizontalAlignment="Left" Height="24" Margin="209,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152"/>
        <TextBox x:Name="txtLastName" HorizontalAlignment="Left" Height="24" Margin="209,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152"/>
        <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Height="24" Margin="209,159,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152"/>
        <TextBox x:Name="txtSex" HorizontalAlignment="Left" Height="24" Margin="209,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Height="26" Margin="320,383,0,0" VerticalAlignment="Top" Width="99" Click="BtnCancel_Click"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Height="26" Margin="464,383,0,0" VerticalAlignment="Top" Width="99" Click="btnAdd_Click"/>
        <Label Content= "Email" HorizontalAlignment="Left" Height="29" Margin="46,291,0,0" VerticalAlignment="Top" Width="153"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="24" Margin="209,285,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152"/>
        <Label Content= "Contact-Number" HorizontalAlignment="Left" Height="29" Margin="46,243,0,0" VerticalAlignment="Top" Width="153"/>
        <TextBox x:Name="txtContactNumber" HorizontalAlignment="Left" Height="24" Margin="209,243,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152"/>
        <Label Content= "Password" HorizontalAlignment="Left" Height="29" Margin="46,328,0,0" VerticalAlignment="Top" Width="153"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Height="24" Margin="209,328,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152"/>
        <TextBlock x:Name="txtError" HorizontalAlignment="Left" Margin="403,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="66" Width="367"/>

    </Grid>
</Window>
